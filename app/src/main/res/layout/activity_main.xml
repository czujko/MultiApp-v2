<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MultiApp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="125dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/txtNombreApp"
        ></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtNombreApp"
        android:layout_marginTop="25dp"
        android:text="Área del Triángulo"
        android:id="@+id/btnTriangulo"
        android:onClick="onClick"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnTriangulo"
        android:layout_marginTop="15dp"
        android:text="Ecuación de 2º Grado"
        android:id="@+id/btnEcuacion"
        android:onClick="onClick"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnEcuacion"
        android:layout_marginTop="15dp"
        android:text="Calculadora"
        android:id="@+id/btnCalculadora"
        android:onClick="onClick"
        ></Button>

</RelativeLayout>